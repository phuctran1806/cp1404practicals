BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_miles
            text: app.miles_message
            multiline: False
            size_hint_x: 3.25
            font_size: 48
            on_text: app.convert_miles_to_km(input_miles.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 35
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                text: 'Down'
                font_size: 35
                on_press: app.handle_increment(input_miles.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        font_size: 35
#        on_press: app.convert_miles_to_km(input_miles.text)
    Label:
        id: output_label
        text: app.km_message
        font_size: 48
        color: (1, 1, 0, 1)